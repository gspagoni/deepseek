{
  "name": "deepseek",
  "version": "9.10.9",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "set APP_VERSION=%npm_package_version% && set APP_PRODUCT_NAME=%npm_package_name% && electron-builder -p always"
  },
  "dependencies": {
    "deepseek": "file:",
    "electron-log": "^5.3.0",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "gspagoni",
        "repo": "deepseek"
      }
    ],
    "appId": "com.example.yourapp",
    "productName": "Deepseek",
    "directories": {
      "output": "dist"
    },
    "win": {
      "artifactName": "${productName} Setup.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "warningsAsErrors": false,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "${productName} ${version}",
      "include": "installer.nsh",
      "installerIcon": "assets/installerIcon.ico",
      "uninstallerIcon": "assets/uninstallerIcon.ico"
    },
    "extraResources": [
      {
        "from": "assets/headerImage.bmp",
        "to": "headerImage.bmp"
      }
    ]
  }
}
